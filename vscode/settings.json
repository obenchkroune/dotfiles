{
  "window.titleBarStyle": "custom",
  "explorer.autoReveal": false,
  "workbench.editor.labelFormat": "short",
  "editor.formatOnSave": true,
  "editor.fontFamily": "Jetbrains Mono, Cousine Nerd Font",
  "editor.lineHeight": 30,
  "editor.wordWrap": "on",
  "workbench.tree.indent": 20,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/*.o": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/*.o": true
  },
  "editor.fontSize": 16,
  // "editor.fontWeight": "bold",
  "editor.matchBrackets": "never",
  "breadcrumbs.enabled": false,
  "editor.minimap.enabled": false,
  "editor.insertSpaces": false,
  "editor.tabSize": 4,
  "workbench.colorTheme": "Bearded Theme HC Ebony",
  "workbench.iconTheme": "bearded-icons",
  "editor.fontLigatures": true,
  "clangd.path": "/home/oussama/.config/Code/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/18.1.3/clangd_18.1.3/bin/clangd",
  "clangd.arguments": [
    "--function-arg-placeholders=0",
    "-header-insertion=never"
  ],
  // "workbench.editor.showTabs": "none",
  "extensions.ignoreRecommendations": true,
  "editor.inlayHints.enabled": "off",
  "workbench.startupEditor": "none",
  "C_Cpp.intelliSenseEngine": "disabled",
  "editor.stickyScroll.enabled": false,
  "workbench.tree.enableStickyScroll": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "php.codeLens.enabled": false,
  "[php]": {
    "editor.defaultFormatter": "DEVSENSE.phptools-vscode"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "cSpell.userWords": [
    "clsx",
    "Formik",
    "hookform",
    "IPTV",
    "signin",
    "tailwindcss"
  ]
}

